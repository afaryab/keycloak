{
  "name": "keycloak-tailwind-theme",
  "version": "1.0.0",
  "description": "Modern Tailwind CSS theme for Keycloak",
  "scripts": {
    "dev": "TAILWIND_MODE=watch tailwindcss -i ./src/input.css -o ./themes/tailwind-theme/login/resources/css/tailwind.css --watch --verbose",
    "build-css": "tailwindcss -i ./src/input.css -o ./themes/tailwind-theme/login/resources/css/tailwind.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./themes/tailwind-theme/login/resources/css/tailwind.css --minify"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7"
  }
}
